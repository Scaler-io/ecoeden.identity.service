@using Duende.IdentityServer.Extensions
@{
    #nullable enable
    string? name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<!-- Navbar -->
<nav class="navbar navbar-expand navbar-light">
    <div class="nav navbar-nav">
        <div class="navbar-brand"
             aria-current="page">
            <span class="ecoeden-text-primary font-weight-bold">E</span>coeden
        </div>
        @if (!string.IsNullOrWhiteSpace(name))
        {
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle mt-2 h6" data-toggle="dropdown">@name<b class="caret"></b></a>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-page="/Account/Logout/Index">Logout</a>
                    </div>
                </li>
            </ul>
        } 
    </div>
    @if(ViewData["current-page"].Equals("login"))
    {
        <div class="nav navbar-nav ml-auto">
            <div class="nav-item font-xs text-secondary">
                New user?
                <a class="text-decoration-none text-ecoeden" href="#">Sign up</a>
            </div>
        </div>
    }
</nav>
